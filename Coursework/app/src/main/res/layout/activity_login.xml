<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2F394D"
    tools:context=".Login">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="183dp"
        android:layout_height="174dp"
        android:layout_marginLeft="110dp"
        android:layout_marginTop="50dp"
        app:srcCompat="@drawable/logo" />

    <EditText
        android:id="@+id/login_username"
        android:layout_width="301dp"
        android:layout_height="63dp"
        android:layout_below="@+id/logo"
        android:layout_alignStart="@+id/logo"
        android:layout_alignEnd="@+id/imageView11"
        android:layout_alignBottom="@+id/imageView11"
        android:layout_marginStart="-39dp"
        android:layout_marginTop="37dp"
        android:layout_marginEnd="-53dp"
        android:layout_marginBottom="-100dp"
        android:ems="10"
        android:fontFamily="@font/chelsea_market"
        android:hint="     Email"
        android:inputType="textPersonName"
        android:textColor="#EEE1B3"
        android:textColorHint="#EEE1B3" />

    <EditText
        android:id="@+id/login_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignStart="@+id/login_username"
        android:layout_alignTop="@+id/login_username"
        android:layout_alignEnd="@+id/login_username"
        android:layout_alignBottom="@+id/login_username"
        android:layout_marginStart="0dp"
        android:layout_marginTop="63dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="-63dp"
        android:ems="10"
        android:fontFamily="@font/chelsea_market"
        android:hint="     Password"
        android:inputType="textPassword"
        android:textColor="#EEE1B3"
        android:textColorHint="#EEE1B3" />

    <Button
        android:id="@+id/login"
        android:stateListAnimator="@null"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/login_password"
        android:layout_alignTop="@+id/login_password"
        android:layout_alignEnd="@+id/login_password"
        android:layout_alignBottom="@+id/login_password"
        android:layout_marginStart="87dp"
        android:layout_marginTop="102dp"
        android:layout_marginEnd="117dp"
        android:layout_marginBottom="-84dp"
        android:background="@drawable/button_default"
        android:fontFamily="@font/chelsea_market"
        android:text="Login" />

    <Button
        android:id="@+id/login_createAccount"
        android:stateListAnimator="@null"
        android:layout_width="196dp"
        android:layout_height="54dp"
        android:layout_alignStart="@+id/login"
        android:layout_alignTop="@+id/login"
        android:layout_alignEnd="@+id/login"
        android:layout_alignBottom="@+id/login"
        android:layout_marginStart="-25dp"
        android:layout_marginTop="84dp"
        android:layout_marginEnd="-30dp"
        android:layout_marginBottom="-95dp"
        android:background="@drawable/button_uncolored"
        android:fontFamily="@font/chelsea_market"
        android:onClick="CreateAccount"
        android:text="Create account" />

    <ImageView
        android:id="@+id/imageView12"
        android:layout_width="39dp"
        android:layout_height="25dp"
        android:layout_alignStart="@+id/login_username"
        android:layout_alignTop="@+id/login_username"
        android:layout_alignEnd="@+id/login_username"
        android:layout_alignBottom="@+id/login_username"
        android:layout_marginStart="-40dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="303dp"
        android:layout_marginBottom="8dp"
        app:srcCompat="@drawable/ic_person_24px" />

    <ImageView
        android:id="@+id/imageView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/login_password"
        android:layout_alignTop="@+id/login_password"
        android:layout_alignEnd="@+id/login_password"
        android:layout_alignBottom="@+id/login_password"
        android:layout_marginStart="-37dp"
        android:layout_marginTop="31dp"
        android:layout_marginEnd="305dp"
        android:layout_marginBottom="5dp"
        app:srcCompat="@drawable/ic_no_encryption_24px" />

    <ProgressBar
        android:id="@+id/progressBar2"
        style="?android:attr/progressBarStyle"
        android:layout_width="49dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/login_createAccount"
        android:layout_alignTop="@+id/login_createAccount"
        android:layout_alignEnd="@+id/login_createAccount"
        android:layout_marginStart="49dp"
        android:layout_marginTop="66dp"
        android:layout_marginEnd="54dp"
        android:visibility="invisible" />

    <androidx.appcompat.widget.AppCompatCheckBox
        android:id="@+id/checkbox"
        android:layout_width="31dp"
        android:layout_height="25dp"

        android:layout_alignStart="@+id/imageView13"
        android:layout_alignTop="@+id/imageView13"
        android:layout_alignEnd="@+id/imageView13"
        android:layout_alignBottom="@+id/imageView13"
        android:layout_marginStart="303dp"
        android:layout_marginTop="-7dp"
        android:layout_marginEnd="-302dp"
        android:layout_marginBottom="9dp"
        android:background="@drawable/button_uncolored" />



    </RelativeLayout>