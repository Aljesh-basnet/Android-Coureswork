<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2F394D"
    tools:context=".Login">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="183dp"
        android:layout_height="174dp"
        android:layout_marginLeft="110dp"
        android:layout_marginTop="50dp"
        app:srcCompat="@drawable/logo" />

    <EditText
        android:id="@+id/login_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logo"
        android:layout_alignStart="@+id/logo"
        android:layout_alignEnd="@+id/imageView11"
        android:layout_alignBottom="@+id/imageView11"
        android:layout_marginStart="-19dp"
        android:layout_marginTop="37dp"
        android:layout_marginEnd="-53dp"
        android:layout_marginBottom="-100dp"
        android:ems="10"
        android:fontFamily="@font/chelsea_market"
        android:hint="     Username"
        android:inputType="textPersonName"
        android:textColor="#EEE1B3"
        android:textColorHint="#EEE1B3" />

    <EditText
        android:id="@+id/login_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignStart="@+id/login_username"
        android:layout_alignTop="@+id/login_username"
        android:layout_alignEnd="@+id/login_username"
        android:layout_alignBottom="@+id/login_username"
        android:layout_marginStart="0dp"
        android:layout_marginTop="63dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="-63dp"
        android:ems="10"
        android:fontFamily="@font/chelsea_market"
        android:hint="     Password"
        android:inputType="textPersonName"
        android:textColor="#EEE1B3"
        android:textColorHint="#EEE1B3" />

    <Button
        android:id="@+id/login"
        android:layout_width="122dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/login_password"
        android:layout_alignTop="@+id/login_password"
        android:layout_alignEnd="@+id/login_password"
        android:layout_alignBottom="@+id/login_password"
        android:layout_marginStart="41dp"
        android:layout_marginTop="92dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="-90dp"
        android:background="@drawable/button_default"
        android:fontFamily="@font/chelsea_market"
        android:text="Login" />

    <Button
        android:id="@+id/createAccount"
        android:layout_width="165dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/login"
        android:layout_alignTop="@+id/login"
        android:layout_alignEnd="@+id/login"
        android:layout_alignBottom="@+id/login"
        android:layout_marginStart="-16dp"
        android:layout_marginTop="89dp"
        android:layout_marginEnd="-27dp"
        android:layout_marginBottom="-89dp"
        android:background="@drawable/button_uncolored"
        android:fontFamily="@font/chelsea_market"
        android:text="Create account" />

    <ImageView
        android:id="@+id/imageView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/login_username"
        android:layout_alignTop="@+id/login_username"
        android:layout_alignEnd="@+id/login_username"
        android:layout_alignBottom="@+id/login_username"
        android:layout_marginStart="-23dp"
        android:layout_marginTop="19dp"
        android:layout_marginEnd="218dp"
        android:layout_marginBottom="10dp"
        app:srcCompat="@drawable/ic_person_24px" />

    <ImageView
        android:id="@+id/imageView13"
        android:layout_width="wrap_content"
        android:layout_height="26dp"
        android:layout_alignStart="@+id/login_password"
        android:layout_alignTop="@+id/login_password"
        android:layout_alignEnd="@+id/login_password"
        android:layout_alignBottom="@+id/login_password"
        android:layout_marginStart="-21dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="219dp"
        android:layout_marginBottom="11dp"
        app:srcCompat="@drawable/ic_no_encryption_24px" />


</RelativeLayout>