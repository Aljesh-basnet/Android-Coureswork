<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2F394D"
    tools:context=".Login">

    <ImageView
        android:id="@+id/imageView11"
        android:layout_width="126dp"
        android:layout_height="197dp"
        android:layout_marginLeft="154dp"
        android:layout_marginTop="80dp"
        app:srcCompat="@drawable/Logo" />

    <EditText
        android:id="@+id/username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView11"
        android:layout_alignStart="@+id/imageView11"
        android:layout_alignEnd="@+id/imageView11"
        android:layout_alignBottom="@+id/imageView11"
        android:layout_marginStart="-30dp"
        android:layout_marginTop="55dp"
        android:layout_marginEnd="-53dp"
        android:layout_marginBottom="-100dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="     Username"
        android:textColor="#EEE1B3" />

    <EditText
        android:id="@+id/password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignStart="@+id/username"
        android:layout_alignTop="@+id/username"
        android:layout_alignEnd="@+id/username"
        android:layout_marginStart="0dp"
        android:layout_marginTop="92dp"
        android:layout_marginEnd="-3dp"
        android:layout_marginBottom="-226dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="    Password"
        android:textColor="#EEE1B3" />

    <Button
        android:id="@+id/login"
        android:layout_width="122dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/imageView11"
        android:layout_alignTop="@+id/imageView11"
        android:layout_alignEnd="@+id/imageView11"
        android:layout_alignBottom="@+id/imageView11"
        android:layout_marginStart="8dp"
        android:layout_marginTop="435dp"
        android:layout_marginEnd="-4dp"
        android:layout_marginBottom="-289dp"
        android:background="@drawable/button_default"
        android:text="Login" />

    <Button
        android:id="@+id/createAccount"
        android:layout_width="113dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/imageView11"
        android:layout_alignTop="@+id/imageView11"
        android:layout_alignEnd="@+id/imageView11"
        android:layout_alignBottom="@+id/imageView11"
        android:layout_marginStart="10dp"
        android:layout_marginTop="530dp"
        android:layout_marginEnd="3dp"
        android:layout_marginBottom="-383dp"
        android:background="@drawable/button_uncolored"
        android:text="Create account" />

    <ImageView
        android:id="@+id/imageView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/username"
        android:layout_alignTop="@+id/username"
        android:layout_alignEnd="@+id/username"
        android:layout_alignBottom="@+id/username"
        android:layout_marginStart="5dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="188dp"
        android:layout_marginBottom="11dp"
        app:srcCompat="@drawable/ic_person_24px" />

    <ImageView
        android:id="@+id/imageView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/password"
        android:layout_alignTop="@+id/password"
        android:layout_alignEnd="@+id/password"
        android:layout_alignBottom="@+id/password"
        android:layout_marginStart="3dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="193dp"
        android:layout_marginBottom="14dp"
        app:srcCompat="@drawable/ic_no_encryption_24px" />


</RelativeLayout>