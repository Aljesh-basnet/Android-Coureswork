<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2F394D"
    tools:context=".Signup">

    <ImageView
        android:id="@+id/imageView11"
        android:layout_width="183dp"
        android:layout_height="174dp"
        android:layout_marginLeft="110dp"
        android:layout_marginTop="50dp"
        app:srcCompat="@drawable/logo" />

    <EditText
        android:id="@+id/signup_username"
        android:layout_width="342dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView11"
        android:layout_alignStart="@+id/imageView11"
        android:layout_alignEnd="@+id/imageView11"
        android:layout_alignBottom="@+id/imageView11"
        android:layout_marginStart="-76dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="-84dp"
        android:layout_marginBottom="-55dp"
        android:ems="10"
        android:fontFamily="@font/chelsea_market"
        android:hint="     Username"
        android:inputType="textPersonName"
        android:textColor="#EEE1B3"
        android:textColorHint="#EEE1B3"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/signup_email"
        android:layout_width="297dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/signup_username"
        android:layout_alignTop="@+id/signup_username"
        android:layout_alignEnd="@+id/signup_username"
        android:layout_alignBottom="@+id/signup_username"
        android:layout_marginStart="2dp"
        android:layout_marginTop="62dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="-61dp"
        android:ems="10"
        android:fontFamily="@font/chelsea_market"
        android:hint="     Email   "
        android:inputType="textPersonName"
        android:textColor="#EEE1B3"
        android:textColorHint="#EEE1B3" />

    <EditText
        android:id="@+id/signup_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignStart="@+id/signup_email"
        android:layout_alignTop="@+id/signup_email"
        android:layout_alignEnd="@+id/signup_email"
        android:layout_alignBottom="@+id/signup_email"
        android:layout_marginStart="1dp"
        android:layout_marginTop="65dp"
        android:layout_marginEnd="-1dp"
        android:layout_marginBottom="-68dp"
        android:ems="10"
        android:fontFamily="@font/chelsea_market"
        android:hint="     Password"
        android:inputType="textPassword"
        android:textColor="#EEE1B3"
        android:textColorHint="#EEE1B3" />

    <EditText
        android:id="@+id/signup_confirmPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignStart="@+id/signup_password"
        android:layout_alignTop="@+id/password"
        android:layout_alignEnd="@+id/signup_password"
        android:layout_alignBottom="@+id/signup_password"
        android:layout_marginStart="-1dp"
        android:layout_marginTop="65dp"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="-68dp"
        android:ems="10"

        android:fontFamily="@font/chelsea_market"
        android:hint="     Confirm Password"
        android:inputType="textPassword"
        android:password="false"
        android:textColor="#EEE1B3"
        android:textColorHint="#EEE1B3"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/username_icon"
        android:layout_width="29dp"
        android:layout_height="29dp"


        android:layout_alignStart="@+id/signup_username"
        android:layout_alignTop="@+id/signup_username"
        android:layout_alignEnd="@+id/signup_username"
        android:layout_alignBottom="@+id/signup_username"
        android:layout_marginStart="-21dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="348dp"
        android:layout_marginBottom="10dp"
        app:srcCompat="@drawable/ic_person_24px" />

    <ImageView
        android:id="@+id/confirm_password_icon"
        android:layout_width="wrap_content"
        android:layout_height="29dp"
        android:layout_alignStart="@+id/signup_password"
        android:layout_alignTop="@+id/password"
        android:layout_alignEnd="@+id/password"
        android:layout_alignBottom="@+id/signup_password"
        android:layout_marginStart="-24dp"
        android:layout_marginTop="77dp"
        android:layout_marginEnd="192dp"
        android:layout_marginBottom="10dp"
        app:srcCompat="@drawable/ic_no_encryption_24px" />

    <ImageView
        android:id="@+id/password_icon"
        android:layout_width="15dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/signup_confirmPassword"
        android:layout_alignTop="@+id/password"
        android:layout_alignEnd="@+id/signup_confirmPassword"
        android:layout_alignBottom="@+id/signup_confirmPassword"
        android:layout_marginStart="-24dp"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="348dp"
        android:layout_marginBottom="10dp"
        app:srcCompat="@drawable/ic_no_encryption_24px" />

    <ImageView
        android:id="@+id/email_icon"
        android:layout_width="33dp"
        android:layout_height="29dp"
        android:layout_alignStart="@+id/signup_email"
        android:layout_alignTop="@+id/signup_email"
        android:layout_alignEnd="@+id/signup_email"
        android:layout_marginStart="-25dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="347dp"
        android:layout_marginBottom="77dp"
        app:srcCompat="@drawable/ic_mail_outline_24px" />

    <Button
        android:id="@+id/signup_createAccount"
        android:layout_width="wrap_content"
        android:layout_height="38dp"
        android:layout_alignStart="@+id/imageView11"
        android:layout_alignTop="@+id/imageView11"
        android:layout_alignEnd="@+id/imageView11"
        android:layout_alignBottom="@+id/imageView11"
        android:layout_marginStart="-3dp"
        android:layout_marginTop="435dp"
        android:layout_marginEnd="-13dp"
        android:layout_marginBottom="-303dp"
        android:background="@drawable/button_default"
        android:fontFamily="@font/chelsea_market"
        android:text="Create Account"
        android:textSize="12sp" />

    <Button
        android:id="@+id/signup_login"
        android:layout_width="129dp"
        android:layout_height="39dp"
        android:layout_alignStart="@+id/imageView11"
        android:layout_alignTop="@+id/imageView11"
        android:layout_alignEnd="@+id/imageView11"
        android:layout_alignBottom="@+id/imageView11"
        android:layout_marginStart="9dp"
        android:layout_marginTop="486dp"
        android:layout_marginEnd="-8dp"
        android:layout_marginBottom="-355dp"
        android:background="@drawable/button_uncolored"
        android:fontFamily="@font/chelsea_market"
        android:onClick="Login "
        android:text="Login"
        android:textSize="12sp" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/signup_login"
        android:layout_alignTop="@+id/signup_login"
        android:layout_alignEnd="@+id/signup_login"
        android:layout_alignBottom="@+id/signup_login"
        android:layout_marginStart="60dp"
        android:layout_marginTop="56dp"
        android:layout_marginEnd="75dp"
        android:layout_marginBottom="-60dp"
        android:visibility="invisible" />


</RelativeLayout>